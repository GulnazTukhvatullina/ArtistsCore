@{
    ViewData["Title"] = "Page";
}
@model ArtistsCore.Artist

<div class="row justify-content-lg-cehter">
    <h1>Add new project</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div class="form-group">
                <label asp-for="Surname" class="control-label">Фамилия</label>
                <input asp-for="Surname" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Имя</label>
                <input asp-for="Name" class=" form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Middle_name" class="control-label">Отчество</label>
                <input asp-for="Middle_name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Портрет</label>
                <input asp-for="Image" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class=" btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to projects list</a>
</div>